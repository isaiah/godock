<% if current_user and login == current_user.login %>

<div class="edit_profile">
	<h3>Edit your profile.</h3>
	<%= form_for current_user, as: :user, html: {:id => 'edit_profile'} do |f| %>
		<%= f.label :email %>
		<%= f.text_field :email, :class => 'text_field' %><br />
		<%= f.submit 'Update Your Profile', :class => 'submit'%>
	<% end %>
</div>
<% end %>
