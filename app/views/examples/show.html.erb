<script type="text/javascript" charset="utf-8">
  SyntaxHighlighter.all()
</script>
<div class="container_16">
  <div class="grid_16">
    <h1>Changes for <span class="ns"><%= @example.examplable.ns.name %>/</span><%= @example.examplable.name %></h1>

    <% @example.versions.reverse_each do |v| %>
      <div class="version">
              <div class="info">
                      <img src="<%= grav_url_for(v.user.email, 25) %>" /> 
                      <%= link_to v.user.login, user_profile_path(v.user) %>
                      <%= time_ago_or_time_stamp((v.updated_at || v.created_at)) %>
              </div>
              <ul>
                <%= render :partial => "examples/example", :locals => {:example => v, :hide_controls => true}%>
              </ul>
      </div>
    <% end %>
  </div>
</div>
