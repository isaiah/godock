<div class="header">
  <div class="container_20">
    <div class="header_content">
      <div class="user_area">
        <div class="grid_20">
          <span class="main_nav">
            <a href="http://github.com/zkim/clojuredocs">github</a>
          </span>
            &nbsp;
            &nbsp;
          <span class="user_area_content">
              <% if current_user && current_user.email && current_user.login %>
                <%= image_tag(grav_url_for(current_user.email, 16), :class => 'user_area_gravatar') %>
                Logged in as <%= link_to current_user.login, :controller => 'users', :action => 'profile', :login => current_user.login %>
                |
                <%= link_to "logout", "/logout", method: :delete%>
              <% else %>
                <a href="/login" id="login">login / sign up</a>
              <% end%>
          </span>
        </div>
        <div class="clear"></div>
		</div>
		<div class="grid_3">
		  <%= image_tag "golang.png", :class => 'cd_logo' %>
		</div>
		<div class="grid_5">
			<h1><a href="/">Godock</a><span class="version">(beta)</span></h1>
		</div>
		<div class="grid_12">
                  <%= render 'shared/search' unless controller_name == "main" && controller.action_name == "index" %>
		</div>
		<div class="clear"></div>
	</div>
	</div>
	<div class="clear"></div>
</div>
<div class="header_filler"></div>
<div class="clear"></div>
